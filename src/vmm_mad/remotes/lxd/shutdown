$LOAD_PATH.unshift File.dirname(__FILE__)

t0 = Time.now
require 'lxd_driver'

LXDriver.log_init

vm_name = ARGV[0]
vm_id = ARGV[2]

info = LXDriver.action_xml

client = LXDClient.new
container = Container.get(vm_name, client)

if ARGV[-1] == '-f'
    container.stop(:force => true)
else
    container.stop
end

unless info.wild
    begin
        LXDriver.container_storage(info, 'unmap')
    rescue StandardError => e
        container.start
        raise e
    end

    container.delete
end

LXDriver.log_end(t0)
