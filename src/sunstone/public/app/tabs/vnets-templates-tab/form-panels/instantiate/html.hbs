<form data-abide novalidate id="{{formPanelId}}Wizard" class="custom creation">
  <div class="row">
    <div class="large-12 large-centered columns selectTemplateTable">
    </div>
  </div>
  <div class="row nameContainer">
    <div class="medium-4 columns">
      <label for="vnet_name">
        {{tr "Network name"}}
        <span class="tip">
          {{tr "Defaults to 'template name-<vnetid>' when empty. When creating several VNets, the wildcard %i will be replaced with a number starting from 0"}}.
        </span>
      </label>
      <input type="text" name="vnet_name" id="vnet_name" />
    </div>
    <div class="medium-4 columns">
      <label for="vnet_n_times">
        {{tr "Number of instances"}}
      </label>
      <input type="number" name="vnet_n_times" id="vnet_n_times" value="1" min="1">
    </div>
  </div>
  <div class="row">
    <div class="large-12 large-centered columns list_of_vntemplates">
      <span class="fa-stack fa-5x">
        <i class="fas fa-cloud fa-stack-2x"></i>
        <i class="fa  fa-spinner fa-spin fa-stack-1x fa-inverse"></i>
      </span>
    </div>
  </div>
</form>
